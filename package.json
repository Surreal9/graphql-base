{
  "name": "graphql-base",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": ">=6"
  },
  "author": "Black Pixel",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rm -rf dist",
    "concat-schema": "find ./src/app/express-graphql/schema -type f -name '*.graphql' -exec cat {} + > ./dist/src/app/express-graphql/schema.graphql",
    "build": "npm run clean && tsc -p ./tsconfig.json --pretty && npm run concat-schema && cp .env dist/.env",
    "debug": "npm run build && NODE_ENV=development nodemon --watch ./dist --inspect=0.0.0.0:5858 --nolazy ./dist/src/app/express-graphql/start.js",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "dev": "NODE_ENV=development nodemon --watch src -e ts,graphql,js --exec 'npm run debug'",
    "precommit": "lint-staged",
    "test": "NODE_ENV=test jest --no-cache --config ./jest.config.json",
    "create-migration": "knex migrate:make",
    "migrations": "knex migrate:latest",
    "reset-db": "npm run build && node -e \"require('./dist/database/db-reset').resetFromCLI()\"",
    "seed": "npm run build && knex seed:run --knexfile dist/knexfile.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ],
    "*.css": "stylelint"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup-tests.ts",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blackpixel/cofe-district-server.git"
  },
  "bugs": {
    "url": "https://github.com/blackpixel/cofe-district-server/issues"
  },
  "homepage": "https://github.com/blackpixel/cofe-district-server#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "casual": "^1.5.19",
    "chalk": "^2.3.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "find": "^0.2.9",
    "graphql": "^0.13.1",
    "graphql-server-express": "^1.3.2",
    "graphql-tools": "^2.21.0",
    "inversify": "^4.11.1",
    "knex": "^0.14.4",
    "knex-cleaner": "^1.1.4",
    "lodash": "^4.17.5",
    "pg": "^7.4.1",
    "reflect-metadata": "^0.1.12",
    "sqlite3": "^4.0.0"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/express": "^4.11.1",
    "@types/find": "^0.2.0",
    "@types/graphql": "^0.12.5",
    "@types/jest": "^22.2.0",
    "@types/knex": "^0.14.9",
    "@types/lodash": "^4.14.105",
    "boxen": "^1.3.0",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-changed-files": "^22.2.0",
    "lint-staged": "^7.0.0",
    "nodemon": "^1.17.2",
    "prettier": "^1.11.1",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^2.7.2",
    "typescript-eslint-parser": "^14.0.0"
  }
}
